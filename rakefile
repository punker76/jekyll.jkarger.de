# usage
# rake post title="New awesome title"

require 'rake'
require 'time'

desc 'create a new draft post'
task :post do
    title = ENV['TITLE']
    slug = "#{Date.today}-#{title.to_s.downcase.gsub(/[^\w]+/, '-')}"

    file = File.join(
        File.dirname(__FILE__),
        '_posts',
        slug + '.markdown'
    )

    File.open(file, "w") do |f|
        f << <<-EOS.gsub(/^     /, '')
---
layout:     post
title:      "#{title}"
date:       #{Time.now}
comments:   true
published:  false
categories: []
---

        EOS
    end

    system ("#{ENV['EDITOR']} #{file}")
end